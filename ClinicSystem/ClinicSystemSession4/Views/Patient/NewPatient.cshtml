@model vmPatient

@{
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}



@section Body{
    <form method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-xs-1">
                Name
            </div>
            <div class="col-xs-4">
                <input type="text" class="form-control" asp-for="patient.Name" />
                <span asp-validation-for="patient.Name"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-1">
                Birthdate
            </div>
            <div class="col-xs-4">
                <input type="date" class="form-control" asp-for="patient.BDate" />
            </div>
        </div>
        <div class="row">
            <div class="col-xs-1">
                Country
            </div>
            <div class="col-xs-4">
                <select class="form-control" asp-for="patient.Country_Id" asp-items='new SelectList(Model.licountry,"ID","Name")'>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-1">
                Gender
            </div>
            <div class="col-xs-4">
                <select class="form-control" asp-for="patient.Gender">
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
            </div>
        </div>
        <div class="row">
            
            <div class="col-xs-4 col-xs-offset-1">
                <input type="file" id="profilePic" asp-for="patient.ProfilePic" style="display:none" />
                <label for="profilePic" class="btn btn-primary">Upload Profile Picture</label>
            </div>
        </div>
        <div class="row">

            <div class="col-xs-5">
                <input type="submit" value="Save" class="btn btn-primary" asp-action="SavePatient" />
            </div>
        </div>
    </form>
}